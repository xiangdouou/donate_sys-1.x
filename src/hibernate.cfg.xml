<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
    	<!-- 加载驱动器 -->
    	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    	
    	<!-- 设置数据库方言-->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <!-- 设置连接数据库的用户名和密码 -->
        <property name="connection.username">root</property>
        
		<!--数据库连接名  -->
        <property name="connection.url">
			<![CDATA[
        		jdbc:mysql://localhost:3306/donate_sys?useUnicode=true&characterEncoding=utf8
        	]]>
		</property>
      
      	<!-- 设置sql语句可见 -->
        <property name="show_sql">true</property>
        
        <!-- 设置sql语句格式化 -->
        <property name="format_sql">true</property>
        
        <!-- 操作数据库时对数据库表结构更新，最常用 -->
        <property name="hbm2ddl.auto">update</property> 
        
         <!-- 映射实体类 -->
        <mapping class="com.donate.entity.User"/>
        <mapping class="com.donate.entity.Project"/>
        <mapping class="com.donate.entity.Money"/>
        <mapping class="com.donate.entity.Goods"/>
        
        
    </session-factory>

</hibernate-configuration>